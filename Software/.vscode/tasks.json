{
    "version": "2.0.0",
    "tasks": [
        {
            "label" : "Build",
            "type" : "cmake",
            "command" : "build",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run Programmer",
            "type": "shell",
            "command": "STM32_Programmer_CLI -c port=SWD -d \"${workspaceFolder}/build/debug/build/RF_module.elf\" -hardRst",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        }
    ]
}